<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link href="https://fonts.googleapis.com/css?family=Comfortaa&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="icon" href="~/images/icon.png" sizes="16x16">

    <script src="~/lib/jquery/dist/jquery.js"></script>

    <title>Planet Vinyl</title>


    <script src="https://kit.fontawesome.com/c2054d9afc.js" crossorigin="anonymous"></script>
</head>

<body>
    <nav>
        <a asp-action="Music" asp-controller="Home">Musik</a>

        @if (ViewBag.Loggedin == "Confirmed")
        {
            <a asp-action="Mypage" asp-controller="Home"><i class="fas fa-user"></i> Mitt konto</a>
            <a asp-action="Logout" asp-controller="Home">Logga ut</a>
        }

        else
        {
            <a asp-action="Login" asp-controller="Home">Logga in</a>
        }

        @if (ViewBag.Page != "Checkout")
        {
            <a class="carticon" @("onclick=ShowCart()")><i class="fas fa-shopping-cart"></i> (<span id="cart-quantity">@ViewBag.CurrentCart</span>) </a>
        }



    </nav>


    @RenderBody()


    <footer>
        <div class="footerflex2">
            <div>
                <h3>
                    Information
                </h3>
                <a asp-controller="Home" asp-action="About">Om oss</a>
            </div>

            <div>
                <h3>
                    Kundservice
                </h3>
 
                <a asp-controller="Home" asp-action="Shipping">Frakt och Leverans</a>
                <a asp-controller="Home" asp-action="FAQ">FAQ</a>
            </div>

            <div>
                <h3>
                    Följ oss
                </h3>
                <a href="#">Facebook</a>
                <a href="#">Instagram</a>
            </div>
        </div>

        <div class="footerflex">
            <img src="~/images/postnord.svg" alt="Alternate Text" />
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/DHL_Logo.svg/1280px-DHL_Logo.svg.png" alt="Alternate Text" />
            <img src="~/images/klarna.png" alt="Alternate Text" />
        </div>

        <p>Copyright © Planet Vinyl 2020</p>
    </footer>


    <script src="~/js/site.js"></script>
  
</body>

</html>
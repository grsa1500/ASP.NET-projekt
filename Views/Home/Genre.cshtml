
@ViewData["menu"] = "";



<partial name="../Shared/_Pageheader.cshtml" />

<div class="innerbody pageinner musicpage">

    <div class="grid">

        <div class="outersearch">
            @if (!String.IsNullOrEmpty(ViewBag.SearchString))
            {
                <h2>Sökning:  @ViewBag.SearchString</h2>
            }

            <div class="searchbox">


                <form method="post">

                    <input type="text" name="SearchString" value="@ViewBag.SearchString" id="SearchString" placeholder="Sök på skiva eller artist..." value="" />
                    <input type="submit" class="fas fa-search" value="&#xf002" />

                </form>
            </div>
        </div>

        <h2 id="title"><i class="fas fa-star"></i> @ViewBag.Title</h2>
        <div class="innergrid first">
            @foreach (var item in ViewBag.Genre)
            {
            <div class="outerproduct">
                <div class="product" @("onclick=GoToAlbum('" + item.AlbumId + "')")>

                    <img src="@item.Image"
                         alt="">
                    <a asp-controller="Home" asp-action="Artist" asp-route-id="@item.Artist"> <b><i class="fas fa-guitar"></i> @item.Artist</b></a>


                    <p>
                        <i class="fas fa-compact-disc"></i> <b>@item.Name</b>
                    </p>

                </div>

                    @if (item.Quantity < 1)
                    {



                        <a class="inactive addtocart">
                          
                                Slut på lager
                         
                          
                        </a>

                    }







                    else
                    {
                        <a class="addtocart" onclick="AddToCart(@item.AlbumId, @item.Quantity)">
                            <h3>
                                <i class="fas fa-cart-plus"></i> @item.Price kr
                            </h3>
                        </a>

                    }

              







            </div>



                }

            
     
        </div>


    </div>

    <div id="pagination">


    </div>
</div>


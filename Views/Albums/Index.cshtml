@model IEnumerable<projekt.Models.Album>

@{
    ViewData["Title"] = "Index";
}
<header class="pageheader pageadmin">
    <div class="left">
        <a class="logo" asp-action="Index" asp-controller="Home"><img src="~/images/icon.png" alt=""> <h1>Planet Vinyl</h1></a>
    </div>
</header>

<div class="innerbody pageinner pageadmin">

    <p>
        <a asp-action="Create"><i class="fas fa-plus"></i> Skapa ny</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Artist)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sales)

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Artist)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sales)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AlbumId"><i class="fas fa-edit"></i> / Lagerstatus</a> |
                        <a asp-action="Delete" asp-route-id="@item.AlbumId">Ta bort</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>